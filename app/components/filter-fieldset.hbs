{{! ember-template=;omt}}
<fieldset>
  <legend>
    {{@label}}
  </legend>
  {{#each @options as |option|}}
    <FilterCheckbox
      @name={{@name}}
      @value={{option.value}}
      @label={{option.label}}
      @checked={{if (array-contains @selections option.value) true null}}
      @onChange={{fn this.handleChange @name option.value}}
    />
  {{/each}}
</fieldset>