{{page-title this.type}}

<h2>
  Filters

  <LinkTo
    title="clear"
    aria-label="clear filters"
    @route="search.filter"
    @models={{array this.type}}
    @query={{this.defaults}}
  >
    Ã—
  </LinkTo>
</h2>

{{#each this.filters as |filter| }}
  <FilterFieldset
    @label={{filter.label}}
    @options={{filter.options}}
    @selections={{filter.selections}}
    @name={{filter.name}}
    @onChange={{this.handleFilterChange}}
  />
{{/each}}

